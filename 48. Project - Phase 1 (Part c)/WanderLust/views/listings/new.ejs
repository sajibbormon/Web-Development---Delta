<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
    <br/> <br/>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" 
                   placeholder="enter title" 
                   class="form-control"
                   required
                   id="validationCustom01"
            >
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please Provide a title!
                </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" 
                      class="form-control"
                      placeholder="Write description..."
                      required
            ></textarea>
                <div class="invalid-feedback">
                    Please write a short description!
                </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image]" 
                   placeholder="enter image url/link"
                   class="form-control"

            >
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label ">Price</label>
                <input  
                        name="listing[price]" 
                        placeholder="enter price" 
                        class="form-control"
                        required
                >
                <div class="invalid-feedback">
                    Enter a valid price!
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="description" class="form-label" >Country</label>
                <input type="text" 
                        name="listing[country]" 
                        placeholder="enter country" 
                        class="form-control"
                        required
                >     
                <div class="invalid-feedback">
                    Should be a valid country name!
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" 
                   name="listing[location]" 
                   placeholder="enter location" 
                   class="form-control"
                   required
            >
                <div class="invalid-feedback">
                    Provide your location!
                </div>
        </div>
        
        <button class="btn btn-dark add-btn mt-3">ADD</button>

    </form>
</div>

</div>
